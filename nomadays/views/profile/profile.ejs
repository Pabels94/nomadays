        <link rel="stylesheet" href="/stylesheets/normalize.css">
        <link rel="stylesheet" href="/stylesheets/profile.css">
    </head>
    
    <div class="padre">
    
        <header class= "header">
            
            <div class= "menu">
                <div class="logo">
                    <a href="/">
                        <img src="/img/login/logotipo.png" alt= "" >
                    </a>
                </div>
                <div class="descarga">
                    <a target="_blank" href="https://www.behance.net/gallery/43584021/NOMADAYS-app" class="descargar">Descarga la app</a>
                </div>
                <div class="login">
                    <% if (locals.user) { %>
                        <a href="/auth/login" class="login"><%= locals.user.name %></a>
                    <% } else {  %> 
                        <a href="/auth/login" class="login">Entrar</a>
                    <% } %>    
                    
                </div>
                <!-- <div class="hamburguesa">
                    <a href="index.html">
                        <img src="/img/login/hamburguer-menu-black.png" alt= "" >
                    </a>
                </div> -->
            </div>
            <div class="profileInfo">
                    <div class="user">
                        <img class="picture" src="/img/login/profile.png" alt= "" >
                        <a class="edit" href="/profile/editProfile/<%- locals.user.id %>">Editar perfil</a>
                    </div>
                    <div class="aboutMe">
                        <% if (locals.user) { %>
                            <div class="name"><%= locals.user.name %></div>
                            <div class="email"><%= locals.user.email %></div>
                            <div class="age">edad: <%= locals.user.age %> años</div>
                            <% if (locals.user.comment) { %>
                                <button class="add"><p><%= locals.user.comment %></p></button>
                            <% } else { %>    
                                <button class="add"><p>¿A qué esperas? Completa tu perfil</p></button>
                            <% } %>
                        <% } %>    
                    </div>
                </div>
        </header>
        <div class="tittle">
            <p>MIS VIAJES</p> </div>
        <div class="myTrips">
            <% if (typeof(trips) != 'undefined') { %>
                    <div class="trip">
                        <div class="field">Origen</div>
                        <% trips.forEach(function(trip) { %>
                            <div class="origen first"><%- trip.originCity %></div>
                        <% }); %>
                    </div>
                    <div class="trip">
                        <div class="field">Destino</div>
                        <% trips.forEach(function(trip) { %>
                            <div class="destino first"><%- trip.destinationCity %></div>
                        <% }); %>
                    </div>
    
                    <div class="trip">
                        <div class="field">Salida</div>
                        <% trips.forEach(function(trip) { %>
                            <div class="destino first"><%= moment(trip.dateInitial).format('YYYY-MM-DD') %></div>
                        <% }); %>
                    </div>
                    <div class="trip">
                        <div class="field">Llegada</div>
                        <% trips.forEach(function(trip) { %>
                            <div class="destino first"><%= moment(trip.dateEnd).format('YYYY-MM-DD') %></div>
                        <% }); %>
                    </div>
    
                    <div class="trip second">
                        <div class="field"></div>
                        <% trips.forEach(function(trip) { %>
                            <a class="show" href="/profile/updateTrip/<%- trip.id %>">Editar</a>
                        <% }); %>
                    </div>
                    
                    <div class="trip second">
                        <div class="field"></div>
                        <% trips.forEach(function(trip) { %>
                            <form method="post" action="/profile/deleteTrip/<%- trip.id %>?_method=DELETE">
                                <input type="hidden" name="_method" value="DELETE">
                                <button class="delete" type="submit" >Eliminar</a>
                            </form>
                        <% }); %>
                    </div>
                    
            <% } %>
    
    
        </div>
    
    
        <a class="new" href="/profile/addTrip">Nuevo</a>
    
        
    
        <div class="tittle">
                <p>MIS LUGARES</p></div>
    
        <div class="myPlaces">
        <% if (typeof(trips) != 'undefined') { %>
            <div class="place">
                <div class="field">Lugar</div>
                <% places.forEach(function(place) { %>
                    <div class="placeSite first"><%- place.name %></div>
                <% }); %>
            </div>
            <div class="place">
                <div class="field">Latitud</div>
                <% places.forEach(function(place) { %>
                    <div class="Coordinates first"><%- place.location.coordinates[0] %></div>                
                <% }); %>            
            </div>
            <div class="place">
                <div class="field">Longitud</div>
                <% places.forEach(function(place) { %>
                    <div class="Coordinates first"><%- place.location.coordinates[1] %></div>
                <% }); %>
            </div>
    
            <div class="place">
                    <div class="field second"></div>
                    <% places.forEach(function(place) { %>
                        <a class="show-place" href="/profile/editPlace/<%- place.id %>">Ver</a>
                    <% }); %>
            </div>

            <div class="place-delete">
                <div class="field second"></div>
                <% places.forEach(function(place) { %>
                    <form method="post" action="/profile/deletePlace/<%- place.id %>?_method=DELETE">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="delete" type="submit">Eliminar</button>
                    </form>
                <% }); %>
            </div>
    
            
        <% } %>        
        </div>
    </div>
    
        <div class="box">
            <a class="new" href="/profile/addPlace">Nuevo</a>
        </div>
            
        
    
        <footer class="footer">
                <div class="info">
                    <a  href="" class="contacto">Contacto</a>
                    <a  href="" class="condiciones">Condiciones legales</a>
